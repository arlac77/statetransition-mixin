{
  "name": "statetransition-mixin",
  "version": "0.0.0-semantic-release",
  "publishConfig": {
    "access": "public"
  },
  "main": "dist/statetransition-mixin.js",
  "module": "src/statetransition-mixin.js",
  "description": "mixin to declare state transition methods like start & stop",
  "keywords": [
    "state",
    "mixin"
  ],
  "contributors": [
    {
      "name": "Markus Felten",
      "email": "markus.felten@gmx.de"
    }
  ],
  "license": "BSD-2-Clause",
  "scripts": {
    "cover": "c8 --temp-directory build/coverage ava && c8 report -r lcov --temp-directory build/coverage",
    "docs": "documentation readme src/statetransition-mixin.js --section=API",
    "test": "ava",
    "semantic-release": "semantic-release",
    "posttest": "npm run prepare && markdown-doctest",
    "prepare": "rollup -c",
    "lint": "documentation lint src/statetransition-mixin.js",
    "travis-deploy-once": "travis-deploy-once"
  },
  "dependencies": {},
  "devDependencies": {
    "markdown-doctest": "^0.9.1",
    "rollup": "^0.67.3",
    "semantic-release": "^15.12.1",
    "ava": "^1.0.0-rc.2",
    "documentation": "^8.1.2",
    "travis-deploy-once": "^5.0.9",
    "rollup-plugin-commonjs": "^9.2.0",
    "rollup-plugin-node-resolve": "^3.4.0",
    "rollup-plugin-executable": "^1.3.0",
    "rollup-plugin-cleanup": "^3.0.0",
    "rollup-plugin-json": "^3.1.0",
    "c8": "^3.2.1",
    "esm": "^3.0.84"
  },
  "engines": {
    "node": ">=10.13"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/arlac77/statetransition-mixin.git"
  },
  "bugs": {
    "url": "https://github.com/arlac77/statetransition-mixin/issues"
  },
  "homepage": "https://github.com/arlac77/statetransition-mixin#readme",
  "ava": {
    "files": [
      "tests/*-test.js",
      "tests/*-test.mjs"
    ],
    "require": [
      "esm"
    ],
    "babel": false,
    "compileEnhancements": false,
    "extensions": [
      "js",
      "mjs"
    ]
  },
  "template": {
    "repository": {
      "url": "https://github.com/arlac77/npm-package-template.git"
    }
  }
}
