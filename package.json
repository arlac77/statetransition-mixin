{
  "name": "statetransition-mixin",
  "version": "0.0.0-semantic-release",
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "main": "src/statetransition-mixin.mjs",
  "module": "src/statetransition-mixin.mjs",
  "description": "mixin to declare state transition methods like start & stop",
  "keywords": [
    "state",
    "mixin"
  ],
  "contributors": [
    {
      "name": "Markus Felten",
      "email": "markus.felten@gmx.de"
    }
  ],
  "license": "BSD-2-Clause",
  "scripts": {
    "cover": "c8 -x 'tests/**/*.mjs' --temp-directory build/tmp ava && c8 report -r lcov -o build/coverage --temp-directory build/tmp",
    "docs": "documentation readme src/statetransition-mixin.mjs --section=API",
    "lint": "documentation lint src/statetransition-mixin.mjs",
    "posttest": "markdown-doctest",
    "test": "ava"
  },
  "dependencies": {},
  "devDependencies": {
    "ava": "^2.4.0",
    "c8": "^6.0.0",
    "documentation": "^12.1.2",
    "esm": "^3.2.25",
    "markdown-doctest": "^1.0.0",
    "semantic-release": "^15.13.28"
  },
  "engines": {
    "node": ">=12.12.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/arlac77/statetransition-mixin.git"
  },
  "bugs": {
    "url": "https://github.com/arlac77/statetransition-mixin/issues"
  },
  "homepage": "https://github.com/arlac77/statetransition-mixin#readme",
  "ava": {
    "files": [
      "tests/*-test.mjs"
    ],
    "require": [
      "esm"
    ],
    "babel": false,
    "compileEnhancements": false,
    "extensions": [
      "mjs"
    ]
  },
  "template": {
    "repository": {
      "url": "https://github.com/arlac77/npm-package-template-esm-only.git"
    }
  }
}
